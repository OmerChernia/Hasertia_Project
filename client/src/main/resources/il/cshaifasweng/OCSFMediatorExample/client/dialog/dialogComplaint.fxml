<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="pnCustomerArea" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.dialog.DialogComplaintController">
   <children>
      <VBox alignment="CENTER" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: transparent;">
         <children>
            <Label prefHeight="70.0" prefWidth="708.0" style="-fx-background-color: #e72141; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 18;" text="Customer - Purchase Details">
               <graphic>
                  <Button mnemonicParsing="false" onAction="#closeCustomerArea" styleClass="button-close" text="x" />
               </graphic>
            </Label>
            <VBox alignment="CENTER" prefHeight="388.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #262262; -fx-padding: 20;">
               <children>

                  <!-- Common Fields -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Purchase Type:" textFill="white" />
                        <TextField fx:id="purchaseTypeField" editable="false" style="-fx-pref-width: 150;" />
                     </children>
                  </HBox>

                  <HBox spacing="10.0">
                     <children>
                        <Label text="Purchase Date:" textFill="white" />
                        <TextField fx:id="purchaseDateField" editable="false" style="-fx-pref-width: 150;" />
                     </children>
                  </HBox>

                  <!-- Movie Ticket Fields -->
                  <VBox fx:id="movieTicketBox" managed="false" prefWidth="93.0" spacing="10" visible="false">
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Movie:" textFill="white" />
                           <TextField fx:id="movieTitleField" editable="false" style="-fx-pref-width: 150;" />
                           <Label text="Time:" textFill="white" />
                           <TextField fx:id="screeningTimeField" editable="false" style="-fx-pref-width: 100;" />
                           <Label text="Seat:" textFill="white" />
                           <TextField fx:id="seatField" editable="false" style="-fx-pref-width: 100;" />
                        </children>
                     </HBox>
                  </VBox>

                  <!-- Home Viewing Package Fields -->
                  <VBox fx:id="homeViewingBox" managed="false" spacing="10" visible="false">
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Movie:" textFill="white" />
                           <TextField fx:id="viewingMovieField" editable="false" style="-fx-pref-width: 150;" />
                           <Label text="Activation Date:" textFill="white" />
                           <TextField fx:id="activationDateField" editable="false" style="-fx-pref-width: 150;" />
                        </children>
                     </HBox>
                  </VBox>

                  <!-- Multi-Entry Ticket Fields -->
                  <VBox fx:id="multiEntryBox" managed="false" spacing="10" visible="false">
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Number of Entries:" textFill="white" />
                           <TextField fx:id="entriesField" editable="false" style="-fx-pref-width: 150;" text="20" />
                        </children>
                     </HBox>
                  </VBox>

                  <!-- Complaint Section -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Complaint Reason:" textFill="white" />
                        <ComboBox fx:id="complaintReasonComboBox" style="-fx-pref-width: 300;">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Requesting a refund for a ticket issue" />
                                 <String fx:value="Movie details on the ticket are incorrect. Please update." />
                                 <String fx:value="The screening time was wrong. Can I get compensation?" />
                                 <String fx:value="I received the wrong movie. Can I change my ticket?" />
                                 <String fx:value="Seating was incorrect. Can this be fixed?" />
                                 <String fx:value="Poor service during the movie. Requesting compensation." />
                                 <String fx:value="Ticket was double charged. Please process a refund." />
                                 <String fx:value="Dissatisfied with the movie quality. Can this be resolved?" />
                                 <String fx:value="Missed the movie due to schedule change. Can I reschedule?" />
                                 <String fx:value="Theater noise ruined the experience. Requesting compensation." />
                              </FXCollections>
                           </items>
                        </ComboBox>
                     </children>
                  </HBox>

                  <HBox spacing="10.0">
                     <children>
                        <Label text="Additional Comments:" textFill="white" />
                        <TextArea fx:id="additionalCommentsArea" prefColumnCount="20" prefRowCount="2" />
                     </children>
                  </HBox>

                  <Separator style="-fx-background-color: white;" />

                  <!-- Response from Customer Service -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Response from Customer Service:" textFill="white" />
                        <TextArea fx:id="customerServiceResponseArea" editable="false" prefColumnCount="20" prefRowCount="2" />
                     </children>
                  </HBox>

                  <Button style="-fx-background-color: #f3bc00; -fx-font-size: 16; -fx-text-fill: #262262;" text="Submit Complaint" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
