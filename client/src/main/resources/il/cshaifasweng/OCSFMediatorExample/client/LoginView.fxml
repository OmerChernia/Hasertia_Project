<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"  >
   <top>
      <HBox alignment="TOP_RIGHT" BorderPane.alignment="TOP_RIGHT">
         <Label style="-fx-font-size: 18; -fx-text-fill: red;" text="Order Check/Cancel" />
         <padding>
            <Insets right="20" top="10" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <!-- Replace with your image path -->
               <Image url="@media/icons/logo.png" />
            </image>
         </ImageView>
         <StackPane alignment="CENTER" />
         <Label prefHeight="36.0" prefWidth="302.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 18;" text="Personal Area" />
         <VBox alignment="CENTER" prefHeight="87.0" prefWidth="302.0" spacing="10.0" style="-fx-background-color: navy; -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="Login to Personal Area" />
            <HBox alignment="CENTER" spacing="10.0">
               <RadioButton fx:id="customerRadioButton" text="Customer" selected="true" onAction="#handleRadioButtonAction"/>
               <RadioButton fx:id="employeeRadioButton" text="Employee" onAction="#handleRadioButtonAction"/>
            </HBox>
            <VBox fx:id="customerLogin" alignment="CENTER" spacing="10.0">
               <HBox alignment="CENTER" spacing="10.0">
                  <Button style="-fx-background-color: yellow; -fx-font-size: 16;" text="✓" />
                  <TextField promptText="ID Number" style="-fx-pref-width: 200; -fx-font-size: 16;" />
               </HBox>
            </VBox>
            <VBox fx:id="employeeLogin" alignment="CENTER" spacing="10.0" visible="false" managed="false">
               <HBox alignment="CENTER" spacing="10.0">
                  <TextField promptText="Username" style="-fx-pref-width: 100; -fx-font-size: 16;" />
                  <PasswordField promptText="Password" style="-fx-pref-width: 100; -fx-font-size: 16;" />
                  <Button style="-fx-background-color: yellow; -fx-font-size: 16;" text="✓" />
               </HBox>
            </VBox>
         </VBox>
      </VBox>
   </center>
   <padding>
      <Insets bottom="50" left="50" right="50" top="50" />
   </padding>
</BorderPane>